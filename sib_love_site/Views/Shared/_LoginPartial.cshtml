@using Microsoft.AspNetCore.Identity
@using sib_love_site.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-white user_button btn btn-outline-light " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Questions", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-outline-light text-white border-0 ms-2">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white rigister_rightside_btn btn btn-outline-light" id="register" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white login_rightside_btn btn btn-outline-light ms-2" id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
        </li>
    }
</ul>